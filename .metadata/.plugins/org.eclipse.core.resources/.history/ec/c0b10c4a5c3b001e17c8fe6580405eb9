package com.main;


import java.util.List;

import javax.persistence.criteria.CriteriaBuilder;
import javax.persistence.criteria.CriteriaQuery;
import javax.persistence.criteria.Root;

import org.hibernate.Session;
import org.hibernate.Transaction;
import org.hibernate.query.Query;

import com.config.hibernateutil;
import com.entity.Person;

public class Test {

	
	public static void main(String[] args) {
		
		Person p = new Person();
		p.setPid(103);
		p.setPname("sakshi");
		p.setPadhar(56465465l);
		p.setPaddr("nagour");
		p.setPmobno(56465465l);
		
		Session session = hibernateutil.getsessionfactory().openSession();

		Transaction tx = session.beginTransaction();
		
		CriteriaBuilder cb = session.getCriteriaBuilder();
		
		CriteriaQuery<Person> cq = cb.createQuery(Person.class);
		
		Root<Person> rper = cq.from(Person.class);
		
		cq.where(cb.equal(rper.get("pid"),102));
		
		Query<Person> query = session.createQuery(cq);
		
		List<Person> list = query.getResultList();
	
		for(Person o : list)
		{
			
			System.out.println(o.getPid());
			System.out.println(o.getPaddr());
			System.out.println(o.getPname());
		}
		
		
		
		tx.commit();
		
	}
}
